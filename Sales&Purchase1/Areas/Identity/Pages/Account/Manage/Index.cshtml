@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
 <form id="profile-form" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
       
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating  mb-3">
                <input asp-for="Username" class="form-control" disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating  mb-3">
                <input asp-for="Input.Firstname" class="form-control" />
                <label asp-for="Input.Firstname" class="form-label"></label>
            </div>
            <div class="form-floating  mb-3">
                <input asp-for="Input.Lastname" class="form-control" />
                <label asp-for="Input.Lastname" class="form-label"></label>
            </div>
            <div class="form-floating  mb-3">
                <input asp-for="Input.UserCompany" class="form-control" />
                <label asp-for="Input.UserCompany" class="form-label"></label>
            </div>
            <div class="form-floating  mb-3">
                <input asp-for="Input.UserAddress" class="form-control" />
                <label asp-for="Input.UserAddress" class="form-label"></label>
            </div>
            <div class="form-floating  mb-3">
                <input asp-for="Input.UserContact" class="form-control" />
                <label asp-for="Input.UserContact" class="form-label"></label>
            </div>
            <div class="form-floating  mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating  mb-3">
                <textarea asp-for="Input.UserDescription" class="form-control" rows="3" style="height: auto;"></textarea>
                <label asp-for="Input.UserDescription" class="form-label"></label>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
       
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Input.UserComLogo" class="w-100"></label>
                @if(Model.Input.UserComLogo != null)
                {
                    <img class="company-logo" id="userComLogo" alt="ComLogo" src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.UserComLogo))" />
                }
                else
                {
                    <img class="company-logo" id="userComLogo" alt="ComLogo" src="~/images/pngwing.com.png" />
                }
                <div class="form-group mt-2">
                    <input type="file" accept="image/*" asp-for="Input.UserComLogo" class="form-control" onchange="document.getElementById('userComLogo').src =window.URL.createObjectURL(this.files[0])" style="width: 350px;" />
                    <label class="form-label" asp-for="Input.UserComLogo" ></label>
                    <span asp-validation-for="Input.UserComLogo" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
 </form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
