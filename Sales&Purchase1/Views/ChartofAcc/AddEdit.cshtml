@model Sales_Purchase1.Models.ChartofAcc

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="AddEdit" asp-route-id="@Model.AccId" onsubmit="return jQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AccId" />

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="AccCode" class="control-label">Code <span style="color: red;">*</span></label>
                        <input asp-for="AccCode" class="form-control" required/>
                        <span asp-validation-for="AccCode" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="AccName" class="control-label">Account Name <span style="color: red;">*</span></label>
                        <input asp-for="AccName" class="form-control" required/>
                        <span asp-validation-for="AccName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="AccType" class="control-label">Type <span style="color: red;">*</span></label>
                        <input asp-for="AccType" class="form-control" required/>
                        <span asp-validation-for="AccType" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Acclock" class="control-label"></label>
                        <input asp-for="Acclock" class="form-control" min="0" max="1" />
                        @*<input asp-for="Acclock"  type="checkbox" value="" />*@
                        <span asp-validation-for="Acclock" class="text-danger"></span>
                    </div>

                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="AccDesc" class="control-label"></label>
                        <textarea asp-for="AccDesc" class="form-control" rows="3" style="height: auto;"></textarea>
                        <span asp-validation-for="AccDesc" class="text-danger"></span>
                    </div>
                    <div class="form-group" hidden>
                        <label asp-for="AccYTD" class="control-label mb-3"></label>
                        <input asp-for="AccYTD" class="form-control" />
                        <span asp-validation-for="AccYTD" class="text-danger"></span>
                    </div>
            
                    <div class="form-group" hidden>
                        <label asp-for="AccUser" class="control-label mb-3"></label>
                        <input asp-for="AccUser" class="form-control" />
                        <span asp-validation-for="AccUser" class="text-danger"></span>
                    </div>
                    <div class="form-group" hidden>
                        <label asp-for="Id" class="control-label mb-3"></label>
                        <select asp-for="Id" class="form-control" asp-items="ViewBag.Id"></select>
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="form-group col">
                    <input type="submit" value="Save" class="btn btn-primary mb-3" style="width: 200px;" />
                    @*<a asp-action="Index" class="btn btn-secondary mb-3" style="width: 200px;">Back to List</a>*@
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
