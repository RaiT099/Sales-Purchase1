@model Sales_Purchase1.Models.Payment
@{
    ViewData["Title"] = "Payment";
}


<h5 class="fw-bold">Make Payment</h5>
<form asp-action="Payment">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-2">
            <div class="form-group mb-3">
                <label asp-for="PayCode" class="control-label"></label>
                <input asp-for="PayCode" class="form-control" />
                <span asp-validation-for="PayCode" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group mb-3">
                <label asp-for="PayAmount" class="control-label"></label>
                <input asp-for="PayAmount" class="form-control" readonly/>
                <span asp-validation-for="PayAmount" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group mb-3">
                <label asp-for="PaycDate" class="control-label"></label>
                <input id="PaycDate" asp-for="PaycDate" class="form-control" />
                <span asp-validation-for="PaycDate" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <label asp-for="PayMethod" class="control-label"></label>
                <select asp-for="PayMethod" class="form-control" >
                    <option>Cash</option>
                    <option>Cheque</option>
                </select>
                <span asp-validation-for="PayMethod" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group mb-3">
                <label asp-for="PayReference" class="control-label"></label>
                <input asp-for="PayReference" class="form-control" />
                <span asp-validation-for="PayReference" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group" hidden>
            <label asp-for="PayNote" class="control-label"></label>
            <input asp-for="PayNote" class="form-control" />
            <span asp-validation-for="PayNote" class="text-danger"></span>
        </div>
        <div class="form-group" hidden>
            <label asp-for="PayUser" class="control-label"></label>
            <input asp-for="PayUser" class="form-control" />
            <span asp-validation-for="PayUser" class="text-danger"></span>
        </div>
        <div class="form-group" hidden>
            <label asp-for="DocId" class="control-label"></label>
            <input asp-for="DocId" class="form-control" />
            <span asp-validation-for="DocId" class="text-danger"></span>
        </div>
        <div class="form-group col">
            <br />
            <input type="submit" value="Payment" class="btn btn-primary mb-3" style="width: 200px;" />
        </div>
   
    </div>
</form>
