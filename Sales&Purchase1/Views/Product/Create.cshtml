@model Sales_Purchase1.Models.Product

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index" style="text-decoration:none">Home</a></li>
    <li class="breadcrumb-item"><a asp-area="" asp-controller="Product" asp-action="Index" style="text-decoration:none">Product</a></li>
    <li class="breadcrumb-item active">Create</li>
</ol>


<div class="exp1">

<div class="row mb-3">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group mb-3">
                            <label asp-for="ProductCode" class="control-label">Product Code <span style="color: red;">*</span></label>
                            <input asp-for="ProductCode" class="form-control" required/>
                            <span asp-validation-for="ProductCode" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group mb-3">
                            <label asp-for="ProductName" class="control-label">Product Name <span style="color: red;">*</span></label>
                            <input asp-for="ProductName" class="form-control" required/>
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group mb-3">
                            <label asp-for="ProductCategory" class="control-label"></label>
                            <select asp-for="ProductCategory" class="form-control">
                                <option>Product</option>
                                <option>Service</option>
                            </select>
                            <span asp-validation-for="ProductCategory" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group mb-3">
                            <label asp-for="ProductUnit" class="control-label"></label>
                            <input asp-for="ProductUnit" class="form-control" />
                            <span asp-validation-for="ProductUnit" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <hr />

                <div class="row mb-3">
                    <div class="col-md-6 mb-3">
                        <div class="form-group mb-3">
                            <label asp-for="ProductCost" class="control-label">Cost <span style="color: red;">*</span></label>
                            <input asp-for="ProductCost" class="form-control" required/>
                            <span asp-validation-for="ProductCost" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="ProductPurchaseRate" class="control-label"></label>
                            <input asp-for="ProductPurchaseRate" class="form-control" />
                            <span asp-validation-for="ProductPurchaseRate" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="ProductPurchasAcc" class="control-label"></label>
                            <input asp-for="ProductPurchasAcc" class="form-control" />
                            <span asp-validation-for="ProductPurchasAcc" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="ProductPurchaseDesc" class="control-label"></label>
                            <textarea asp-for="ProductPurchaseDesc" class="form-control" rows="3" style="height: auto;" ></textarea>
                            <span asp-validation-for="ProductPurchaseDesc" class="text-danger"></span>
                        </div>



                    </div>

                    <div class="col-md-6 mb-3">
                         <div class="form-group mb-3">
                            <label asp-for="ProductSellPrice" class="control-label">Sell Price <span style="color: red;">*</span></label>
                            <input asp-for="ProductSellPrice" class="form-control" required/>
                            <span asp-validation-for="ProductSellPrice" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="ProductSellRate" class="control-label"></label>
                            <input asp-for="ProductSellRate" class="form-control" />
                            <span asp-validation-for="ProductSellRate" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="ProductSellAcc" class="control-label"></label>
                            <input asp-for="ProductSellAcc" class="form-control" />
                            <span asp-validation-for="ProductSellAcc" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="ProductSellDesc" class="control-label"></label>
                            <textarea asp-for="ProductSellDesc" class="form-control" rows="3" style="height: auto;" ></textarea>
                            <span asp-validation-for="ProductSellDesc" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            
           
                <div class="row mb-3">
                    <div class="col-md-3 mb-3" hidden>
                        <div class="form-group">
                            <label asp-for="ProductStock" class="control-label"></label>
                            <input asp-for="ProductStock" class="form-control" />
                            <span asp-validation-for="ProductStock" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="ProductActive" /> @Html.DisplayNameFor(model => model.ProductActive)
                        </label>
                    </div>
                    </div>
                </div>
           
            
           
            
            <div class="form-group" hidden>
                <label asp-for="ProductUser" class="control-label"></label>
                <input asp-for="ProductUser" class="form-control" />
                <span asp-validation-for="ProductUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mb-3" style="width: 200px; "/>
                <a asp-action="Index" class="btn btn-secondary mb-3" style="width: 200px;">Back to List</a>
            </div>
        </form>
    </div>
</div>

</div>





